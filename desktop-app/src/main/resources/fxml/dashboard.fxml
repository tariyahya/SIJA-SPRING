<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smk.presensi.desktop.controller.DashboardController"
            stylesheets="@../css/dashboard.css"
            styleClass="root">

    <!-- MenuBar and Top Bar -->
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="Export PDF..." onAction="#handleExportPdf"/>
                    <MenuItem text="Export CSV..." onAction="#handleExportCsv"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Logout" onAction="#handleLogout"/>
                </Menu>
                
                <Menu text="Manage">
                    <MenuItem text="Presensi Management" onAction="#handlePresensiManagement"/>
                    <MenuItem text="Siswa Management" onAction="#handleSiswaManagement"/>
                    <MenuItem text="Guru Management" onAction="#handleGuruManagement"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="User Management" onAction="#handleUserManagement"/>
                </Menu>
                
                <Menu text="View">
                    <MenuItem text="Analytics &amp; Reports" onAction="#handleAnalytics"/>
                    <MenuItem text="Dashboard" onAction="#handleRefresh"/>
                </Menu>
                
                <Menu text="Settings">
                    <MenuItem text="Preferences..." onAction="#handleSettings"/>
                </Menu>
                
                <Menu text="Help">
                    <MenuItem text="About" onAction="#handleAbout"/>
                </Menu>
            </MenuBar>
            
            <HBox styleClass="top-bar" spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                
                <Label text="SIJA Presensi - Dashboard Admin" styleClass="title">
                    <font>
                        <Font name="System Bold" size="20"/>
                    </font>
                </Label>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- Connection Status -->
                <Label fx:id="connectionStatusLabel" text="ðŸ”´ Disconnected" styleClass="connection-status"/>
                
                <Label fx:id="userLabel" text="ðŸ‘¤ User" styleClass="user-label"/>
                
                <CheckBox fx:id="mockDataCheckbox" text="Mock Data" selected="true"/>
                
                <Button fx:id="refreshButton" text="âŸ³ Refresh" styleClass="btn-primary"/>
                
                <Button fx:id="logoutButton" text="ðŸšª Logout" styleClass="btn-danger"/>
                
                <ProgressIndicator fx:id="loadingIndicator" prefWidth="30" prefHeight="30" visible="false"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Error Label -->
            <Label fx:id="errorLabel" styleClass="error-label" visible="false" wrapText="true"/>

            <!-- Statistics Cards -->
            <HBox spacing="15" styleClass="stats-container">
                <!-- Total Presensi Card -->
                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                    <Label text="Total Presensi" styleClass="stat-title"/>
                    <Label fx:id="totalPresensiLabel" text="0" styleClass="stat-value"/>
                </VBox>

                <!-- Total Hadir Card -->
                <VBox styleClass="stat-card stat-success" HBox.hgrow="ALWAYS">
                    <Label text="Hadir" styleClass="stat-title"/>
                    <Label fx:id="totalHadirLabel" text="0" styleClass="stat-value"/>
                </VBox>

                <!-- Total Terlambat Card -->
                <VBox styleClass="stat-card stat-warning" HBox.hgrow="ALWAYS">
                    <Label text="Terlambat" styleClass="stat-title"/>
                    <Label fx:id="totalTerlambatLabel" text="0" styleClass="stat-value"/>
                </VBox>

                <!-- Total Alpha Card -->
                <VBox styleClass="stat-card stat-danger" HBox.hgrow="ALWAYS">
                    <Label text="Alpha" styleClass="stat-title"/>
                    <Label fx:id="totalAlphaLabel" text="0" styleClass="stat-value"/>
                </VBox>

                <!-- Persentase Hadir Card -->
                <VBox styleClass="stat-card stat-info" HBox.hgrow="ALWAYS">
                    <Label text="Persentase Hadir" styleClass="stat-title"/>
                    <Label fx:id="persentaseHadirLabel" text="0.00%" styleClass="stat-value"/>
                </VBox>
            </HBox>

            <!-- RFID Checkin Section -->
            <VBox spacing="10" styleClass="rfid-section">
                <Label text="RFID Checkin (Simulasi)" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="rfidInput" promptText="Scan/Input RFID Card ID..." 
                               prefWidth="300" styleClass="rfid-input"/>
                    <Button fx:id="checkinButton" text="Checkin" styleClass="btn-success"/>
                </HBox>
                
                <Label text="Tip: Fokus pada input field, lalu scan kartu RFID atau ketik ID dan tekan Enter" 
                       styleClass="hint-text"/>
            </VBox>

            <!-- Presensi Table -->
            <VBox VBox.vgrow="ALWAYS">
                <Label text="Daftar Presensi Hari Ini" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                
                <TableView fx:id="presensiTable" VBox.vgrow="ALWAYS" styleClass="presensi-table">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="usernameColumn" text="Username" prefWidth="100"/>
                        <TableColumn fx:id="tipeColumn" text="Tipe" prefWidth="80"/>
                        <TableColumn fx:id="tanggalColumn" text="Tanggal" prefWidth="100"/>
                        <TableColumn fx:id="jamMasukColumn" text="Jam Masuk" prefWidth="100"/>
                        <TableColumn fx:id="jamPulangColumn" text="Jam Pulang" prefWidth="100"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                        <TableColumn fx:id="methodColumn" text="Method" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox styleClass="status-bar" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <Label fx:id="statusLabel" text="Status: Ready" styleClass="status-text"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="SIJA Presensi Desktop v1.0.0" styleClass="version-text"/>
        </HBox>
    </bottom>

</BorderPane>
