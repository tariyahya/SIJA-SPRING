<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smk.presensi.desktop.controller.DudiManagementController"
            prefWidth="1100" prefHeight="650">

    <top>
        <VBox spacing="8" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
            <Label text="Manajemen DUDI &amp; PKL"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Label text="Master perusahaan PKL dan penempatan siswa"
                   style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
        </VBox>
    </top>

    <center>
        <BorderPane style="-fx-padding: 20;">
            <top>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 15 0;">
                    <Button fx:id="addButton"
                            text="Tambah DUDI"
                            onAction="#handleAdd"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-min-width: 120;"/>
                    <Button fx:id="editButton"
                            text="Edit"
                            onAction="#handleEdit"
                            disable="true"
                            style="-fx-background-color: #FFC107; -fx-text-fill: black; -fx-min-width: 90;"/>
                    <Button fx:id="deleteButton"
                            text="Hapus"
                            onAction="#handleDelete"
                            disable="true"
                            style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-min-width: 90;"/>
                    <Button fx:id="assignButton"
                            text="Assign Siswa PKL"
                            onAction="#handleAssignSiswa"
                            disable="true"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-min-width: 150;"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <TextField fx:id="searchField"
                               promptText="Cari DUDI..."
                               prefWidth="260"/>
                    <Button fx:id="refreshButton"
                            text="Refresh"
                            onAction="#handleRefresh"
                            style="-fx-min-width: 90;"/>
                    <Button fx:id="closeButton"
                            text="Close"
                            onAction="#handleClose"
                            style="-fx-min-width: 80;"/>

                    <ProgressIndicator fx:id="loadingIndicator"
                                       prefWidth="28" prefHeight="28"
                                       visible="false"/>
                </HBox>
            </top>

            <center>
                <TableView fx:id="dudiTable"
                           style="-fx-border-color: #ddd; -fx-border-width: 1;">
                    <columns>
                        <TableColumn fx:id="namaColumn" text="Nama" prefWidth="220"/>
                        <TableColumn fx:id="bidangColumn" text="Bidang Usaha" prefWidth="160"/>
                        <TableColumn fx:id="alamatColumn" text="Alamat" prefWidth="260"/>
                        <TableColumn fx:id="contactPersonColumn" text="Contact Person" prefWidth="150"/>
                        <TableColumn fx:id="contactPhoneColumn" text="No. HP" prefWidth="120"/>
                        <TableColumn fx:id="kuotaColumn" text="Kuota" prefWidth="70"/>
                        <TableColumn fx:id="aktifColumn" text="Aktif" prefWidth="70"/>
                    </columns>
                </TableView>
            </center>
        </BorderPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-padding: 12 20; -fx-background-color: #f5f5f5;">
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>

</BorderPane>

