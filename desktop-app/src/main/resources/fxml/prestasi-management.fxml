<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smk.presensi.desktop.controller.PrestasiManagementPlaceholderController"
            styleClass="root"
            stylesheets="@../css/dashboard.css">
    <top>
        <VBox>
            <HBox styleClass="top-bar" spacing="10" alignment="CENTER_LEFT">
                <padding><Insets top="15" right="20" bottom="15" left="20"/></padding>
                <Label text="Prestasi Siswa (Placeholder)" styleClass="title">
                    <font><Font name="System Bold" size="20"/></font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="infoLabel" text="Ready" styleClass="user-label"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets top="10" right="20" bottom="20" left="20"/></padding>

            <TableView fx:id="prestasiTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="siswaColumn" text="Siswa" prefWidth="150"/>
                    <TableColumn fx:id="kelasColumn" text="Kelas" prefWidth="100"/>
                    <TableColumn fx:id="prestasiColumn" text="Prestasi" prefWidth="220"/>
                    <TableColumn fx:id="tingkatColumn" text="Tingkat" prefWidth="120"/>
                    <TableColumn fx:id="tanggalColumn" text="Tanggal" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
