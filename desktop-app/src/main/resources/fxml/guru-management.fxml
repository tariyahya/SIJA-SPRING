<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smk.presensi.desktop.controller.GuruManagementController"
            styleClass="root"
            stylesheets="@../css/dashboard.css">

    <top>
        <VBox>
            <HBox styleClass="top-bar" spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                
                <Label text="ðŸ‘¨â€ðŸ« Manajemen Guru" styleClass="title">
                    <font>
                        <Font name="System Bold" size="20"/>
                    </font>
                </Label>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Label fx:id="statusLabel" text="Ready" styleClass="user-label"/>
                <ProgressIndicator fx:id="loadingIndicator" prefWidth="30" prefHeight="30" visible="false"/>
            </HBox>
            
            <!-- Search and Action Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="search-bar">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>
                
                <TextField fx:id="searchField" promptText="ðŸ” Cari NIP, Nama, atau Mata Pelajaran..." 
                           prefWidth="300" HBox.hgrow="ALWAYS"/>
                
                <ComboBox fx:id="mapelFilter" promptText="Filter Mata Pelajaran" prefWidth="200"/>
                
                <Button fx:id="searchButton" text="Cari" styleClass="btn-primary"/>
                
                <Button fx:id="resetButton" text="Reset" styleClass="btn-secondary"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Button fx:id="addButton" text="âž• Tambah Guru" styleClass="btn-success"/>
                
                <Button fx:id="refreshButton" text="âŸ³ Refresh" styleClass="btn-primary"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Info Label -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="infoLabel" text="Total: 0 guru"/>
                <Region HBox.hgrow="ALWAYS"/>
                <CheckBox fx:id="mockDataCheckbox" text="Mock Data" selected="false"/>
            </HBox>
            
            <!-- Table -->
            <TableView fx:id="guruTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nipColumn" text="NIP" prefWidth="150"/>
                    <TableColumn fx:id="namaColumn" text="Nama" prefWidth="200"/>
                    <TableColumn fx:id="mapelColumn" text="Mata Pelajaran" prefWidth="180"/>
                    <TableColumn fx:id="rfidColumn" text="RFID Card ID" prefWidth="150"/>
                    <TableColumn fx:id="barcodeColumn" text="Barcode ID" prefWidth="120"/>
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="200"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            
            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="editButton" text="âœï¸ Edit" styleClass="btn-warning" disable="true"/>
                <Button fx:id="deleteButton" text="ðŸ—‘ï¸ Delete" styleClass="btn-danger" disable="true"/>
                <Button fx:id="closeButton" text="Close" styleClass="btn-secondary"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
