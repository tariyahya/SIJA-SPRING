<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smk.presensi.desktop.controller.UserManagementController"
            prefWidth="1000" prefHeight="700">
    
    <top>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
            <Label text="User Management" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Manage users and their roles" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
        </VBox>
    </top>
    
    <center>
        <BorderPane style="-fx-padding: 20;">
            <top>
                <!-- Toolbar -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 15 0;">
                    <Button fx:id="addUserBtn" text="âž• Add User" onAction="#handleAddUser" 
                            style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-min-width: 120;"/>
                    <Button fx:id="editUserBtn" text="âœï¸ Edit" onAction="#handleEditUser" 
                            style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-min-width: 100;" disable="true"/>
                    <Button fx:id="deleteUserBtn" text="ðŸ—‘ï¸ Delete" onAction="#handleDeleteUser" 
                            style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-min-width: 100;" disable="true"/>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <TextField fx:id="searchField" promptText="ðŸ” Search users..." prefWidth="250"/>
                    <Button text="Refresh" onAction="#handleRefresh" style="-fx-min-width: 80;"/>
                </HBox>
            </top>
            
            <center>
                <!-- Users Table -->
                <TableView fx:id="usersTable" style="-fx-border-color: #ddd; -fx-border-width: 1;">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"/>
                        <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                        <TableColumn fx:id="roleColumn" text="Role" prefWidth="100"/>
                        <TableColumn fx:id="tipeColumn" text="Tipe" prefWidth="100"/>
                        <TableColumn fx:id="rfidCardIdColumn" text="RFID Card ID" prefWidth="150"/>
                        <TableColumn fx:id="enabledColumn" text="Enabled" prefWidth="80"/>
                        <TableColumn fx:id="createdAtColumn" text="Created At" prefWidth="150"/>
                    </columns>
                </TableView>
            </center>
        </BorderPane>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 15 20; -fx-background-color: #f5f5f5;">
            <Label fx:id="statusLabel" text="Ready"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="totalUsersLabel" text="Total Users: 0" style="-fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>
