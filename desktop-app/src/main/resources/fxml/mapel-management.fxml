<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smk.presensi.desktop.controller.MapelManagementController"
            styleClass="root"
            stylesheets="@../css/dashboard.css">

    <top>
        <VBox>
            <HBox styleClass="top-bar" spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>

                <Label text="Manajemen Mata Pelajaran" styleClass="title">
                    <font>
                        <Font name="System Bold" size="20"/>
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="statusLabel" text="Ready" styleClass="user-label"/>
                <ProgressIndicator fx:id="loadingIndicator" prefWidth="30" prefHeight="30" visible="false"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Search / Actions -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Cari kode / nama / deskripsi" prefWidth="260"/>
                <Button fx:id="searchButton" text="Cari" styleClass="btn-primary"/>
                <Button fx:id="resetButton" text="Reset" styleClass="btn-secondary"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="addButton" text="Tambah" styleClass="btn-success"/>
                <Button fx:id="editButton" text="Edit" styleClass="btn-warning" disable="true"/>
                <Button fx:id="deleteButton" text="Hapus" styleClass="btn-danger" disable="true"/>
                <Button fx:id="refreshButton" text="Refresh" styleClass="btn-secondary"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="mapelTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="kodeColumn" text="Kode" prefWidth="120"/>
                    <TableColumn fx:id="namaColumn" text="Nama" prefWidth="200"/>
                    <TableColumn fx:id="deskripsiColumn" text="Deskripsi" prefWidth="300"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="infoLabel" text="Total: 0 mapel"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
