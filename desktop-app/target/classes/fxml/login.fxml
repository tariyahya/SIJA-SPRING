<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smk.presensi.desktop.controller.LoginController"
      stylesheets="@../css/login.css"
      styleClass="root">

    <!-- Left Side: Branding -->
    <VBox styleClass="branding-pane" HBox.hgrow="ALWAYS" alignment="CENTER" spacing="10">
        <Label text="SIJA" styleClass="brand-title"/>
        <Label text="Sistem Informasi &amp; Jurnal PKL" styleClass="brand-subtitle"/>
        <Label text="SMK Negeri 1 Pungging" styleClass="brand-school"/>
    </VBox>

    <!-- Right Side: Login Form -->
    <VBox styleClass="login-pane" HBox.hgrow="ALWAYS" alignment="CENTER" maxWidth="550" minWidth="400">
        <padding>
            <Insets top="40" right="60" bottom="40" left="60"/>
        </padding>

        <VBox spacing="30" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="Selamat Datang" styleClass="login-header"/>
                <Label text="Silahkan login untuk masuk ke dashboard" styleClass="login-subheader"/>
            </VBox>

            <Label fx:id="errorLabel" styleClass="error-label" visible="false" wrapText="true" managed="false" maxWidth="Infinity"/>

            <VBox spacing="20">
                <VBox spacing="8">
                    <Label text="Username" styleClass="field-label"/>
                    <TextField fx:id="usernameField" promptText="Masukkan username" styleClass="input-field"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Password" styleClass="field-label"/>
                    <PasswordField fx:id="passwordField" promptText="Masukkan password" styleClass="input-field"/>
                </VBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <CheckBox fx:id="rememberMeCheckbox" text="Ingat Saya" styleClass="remember-checkbox"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Hyperlink text="Lupa Password?" styleClass="forgot-link"/>
                </HBox>
            </VBox>

            <Button fx:id="loginButton" text="MASUK" styleClass="login-button" defaultButton="true" maxWidth="Infinity"/>
            
            <StackPane>
                 <ProgressIndicator fx:id="loadingIndicator" visible="false" maxWidth="30" maxHeight="30"/>
            </StackPane>
            
            <Label text="Â© 2024 SIJA Dev Team" styleClass="footer-text" maxWidth="Infinity" alignment="CENTER"/>
        </VBox>
    </VBox>
</HBox>