<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smk.presensi.desktop.controller.EditKehadiranController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label fx:id="titleLabel" text="Edit Kehadiran">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TableView fx:id="siswaTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="noColumn" prefWidth="50.0" text="No" />
                <TableColumn fx:id="nisnColumn" prefWidth="150.0" text="NISN" />
                  <TableColumn fx:id="namaColumn" prefWidth="300.0" text="Nama Siswa" />
                  <TableColumn fx:id="kehadiranColumn" prefWidth="200.0" text="Kehadiran" />
              </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="cancelButton" mnemonicParsing="false" text="Batal" />
                  <Button fx:id="saveButton" mnemonicParsing="false" style="-fx-background-color: #0d6efd; -fx-text-fill: white;" text="Simpan" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
