<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smk.presensi.desktop.controller.InventarisPlaceholderController"
            styleClass="root"
            stylesheets="@../css/dashboard.css">
    <top>
        <VBox>
            <HBox styleClass="top-bar" spacing="10" alignment="CENTER_LEFT">
                <padding><Insets top="15" right="20" bottom="15" left="20"/></padding>
                <Label text="Inventaris (Placeholder)" styleClass="title">
                    <font><Font name="System Bold" size="20"/></font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="6">
                    <Button fx:id="importButton" text="Import Excel" onAction="#handleImportExcel"/>
                    <Button fx:id="exportExcelButton" text="Export Excel" onAction="#handleExportExcel"/>
                    <Button fx:id="exportCsvButton" text="Export CSV" onAction="#handleExportCsv"/>
                    <Button fx:id="exportPdfButton" text="Cetak PDF" onAction="#handleExportPdf"/>
                </HBox>
                <Label fx:id="infoLabel" text="Ready" styleClass="user-label"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox spacing="10">
            <padding><Insets top="10" right="20" bottom="20" left="20"/></padding>
            <TableView fx:id="inventarisTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="kodeColumn" text="Kode" prefWidth="110"/>
                    <TableColumn fx:id="namaColumn" text="Nama Barang" prefWidth="180"/>
                    <TableColumn fx:id="kategoriColumn" text="Kategori" prefWidth="120"/>
                    <TableColumn fx:id="jumlahColumn" text="Jumlah" prefWidth="80"/>
                    <TableColumn fx:id="lokasiColumn" text="Lokasi" prefWidth="160"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
