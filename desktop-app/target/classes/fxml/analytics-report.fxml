<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smk.presensi.desktop.controller.AnalyticsReportController"
            prefWidth="1000" prefHeight="700">

    <top>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
            <Label text="Analytics &amp; Reports" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Periode:"/>
                <DatePicker fx:id="startDatePicker"/>
                <Label text="-"/>
                <DatePicker fx:id="endDatePicker"/>
                <Button text="Refresh" onAction="#handleRefresh"/>
                <Region HBox.hgrow="ALWAYS"/>
                <ProgressIndicator fx:id="loadingIndicator" visible="false" prefWidth="20" prefHeight="20"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20" style="-fx-padding: 20;">
                
                <!-- Summary Cards -->
                <HBox spacing="20">
                    <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" HBox.hgrow="ALWAYS">
                        <Label text="Total Presensi" style="-fx-text-fill: #666;"/>
                        <Label fx:id="totalPresensiLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                    <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" HBox.hgrow="ALWAYS">
                        <Label text="Rata-rata Kehadiran" style="-fx-text-fill: #666;"/>
                        <Label fx:id="avgAttendanceLabel" text="0%" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: green;"/>
                    </VBox>
                </HBox>

                <!-- Charts -->
                <HBox spacing="20" VBox.vgrow="ALWAYS">
                    <VBox style="-fx-background-color: white; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" HBox.hgrow="ALWAYS">
                        <Label text="Tren Kehadiran Mingguan" style="-fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
                        <BarChart fx:id="attendanceChart">
                            <xAxis>
                                <CategoryAxis label="Hari"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Jumlah"/>
                            </yAxis>
                        </BarChart>
                    </VBox>
                    
                    <VBox style="-fx-background-color: white; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" HBox.hgrow="ALWAYS">
                        <Label text="Distribusi Status" style="-fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
                        <PieChart fx:id="statusPieChart"/>
                    </VBox>
                </HBox>
                
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
